<% include ./partials/header %>

<div class="container" id="register-form">
  <h1 class="text-secondary">Sign Up!</h1>
  <form action="/register" method="POST">
    <div class="form-row">
      <div class="col">
        <input
          class="form-control"
          type="text"
          name="username"
          placeholder="username"
        />
      </div>
      <div class="col">
        <input
          class="form-control"
          type="password"
          name="password"
          placeholder="password"
        />
      </div>
    </div>
    <button class="btn btn-primary btn-sm mt-2" type="submit">Sign Up</button>
  </form>
</div>

<% include ./partials/footer %>
